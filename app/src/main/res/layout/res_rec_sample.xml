<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_8sdp"
        app:cardBackgroundColor="@color/startblue"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/usrusr"
                android:layout_marginLeft="@dimen/_8sdp"/>
            <TextView
                android:id="@+id/name"
                android:layout_toRightOf="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rachit Shah"
                android:textColor="@color/graylight"
                android:textSize="@dimen/_18ssp" />
            <TextView
                android:id="@+id/loc"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gulbai Tekra"
                android:textColor="@color/graylight"
                android:layout_marginLeft="@dimen/_1sdp"/>
            <TextView
                android:id="@+id/rid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:text="Request Id"
                android:textColor="@color/graylight"
                android:layout_marginLeft="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_5sdp" />
            <TextView
                android:id="@+id/req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_toRightOf="@+id/rid"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="RD001"
                android:textColor="@color/graylight"/>
            <TextView
                android:id="@+id/stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rid"
                android:layout_marginLeft="@dimen/_19sdp"
                android:text="Status"
                android:textColor="@color/graylight"/>
            <TextView
                android:id="@+id/stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/req"
                android:layout_toRightOf="@+id/rid"
                android:layout_marginLeft="@dimen/_110sdp"
                android:text="Accepted"
                android:textColor="@color/graylight"/>
            <TextView
                android:id="@+id/dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stat"
                android:layout_marginLeft="@dimen/_19sdp"
                android:text="Accepted On"
                android:textColor="@color/graylight"/>
            <TextView
                android:id="@+id/dld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stt"
                android:layout_toRightOf="@+id/dl"
                android:layout_marginLeft="@dimen/_70sdp"
                android:text="04:29 Pm 03-02-19"
                android:textColor="@color/graylight"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
